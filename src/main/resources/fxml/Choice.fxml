<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.safe.whispr.safewhispr.ChoiceController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #0e0e0e;">
      
    <padding>
        <Insets top="50" right="40" bottom="50" left="40"/>
    </padding>

    <Label text="⚡ Choose Posting Mode ⚡"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: red;" />

    <Button fx:id="anonymousBtn" text="⚡ Post Anonymously ⚡"
            minWidth="240"
            style="-fx-background-color: black; -fx-text-fill: red; -fx-font-weight: bold; -fx-background-radius: 12;" />

    <Button fx:id="publicBtn" text="⚡ Post Publicly ⚡"
            minWidth="240"
            style="-fx-background-color: black; -fx-text-fill: red; -fx-font-weight: bold; -fx-background-radius: 12;" />

    <Button fx:id="backToLoginButton" text="⛔ Back to Login"
            minWidth="240"
            style="-fx-background-color: #550000; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;" />

</VBox>